{
  "expo": {
    "name": "DreamWeaver",
    "slug": "StoryApp",
    "version": "1.0.0",
    "orientation": "default",
    "icon": "./assets/icons/icon.png",
    "scheme": "storyapp",
    "userInterfaceStyle": "automatic",
    "newArchEnabled": true,
    "ios": {
      "supportsTablet": true,
      "bundleIdentifier": "com.samlovesit.StoryApp",
      "googleServicesFile": "./GoogleService-Info.plist",
      "infoPlist": {
        "ITSAppUsesNonExemptEncryption": false
      }
    },
    "android": {
      "adaptiveIcon": {
        "foregroundImage": "./assets/images/adaptive-icon.png",
        "backgroundColor": "#0f1129"
      },
      "edgeToEdgeEnabled": true,
      "package": "com.samlovesit.StoryApp",
      "googleServicesFile": "./google-services.json",
      "permissions": ["com.android.vending.BILLING"]
    },
    "web": {
      "bundler": "metro",
      "output": "static",
      "favicon": "./assets/images/favicon.png"
    },
    "plugins": [
      "expo-router",
      "@react-native-firebase/app",
      [
        "expo-splash-screen",
        {
          "image": "./assets/images/splash.png",
          "resizeMode": "cover",
          "backgroundColor": "#0f1129"
        }
      ],
      "@react-native-firebase/auth",
      [
        "@react-native-google-signin/google-signin",
        {
          "iosUrlScheme": "com.googleusercontent.apps.210183705276-25mvr7rl83brhvc9dck3ci3nlok08jtd"
        }
      ],
      "expo-apple-authentication",
      "expo-notifications",
      [
        "expo-font",
        {
          "fonts": [
            "./assets/fonts/PlayfairDisplay-Regular.ttf",
            "./assets/fonts/SpaceMono-Regular.ttf"
          ],
          "android": {
            "fonts": [
              {
                "fontFamily": "PlayfairDisplay-Regular",
                "fontDefinitions": [
                  {
                    "path": "./assets/fonts/PlayfairDisplay-Regular.ttf",
                    "weight": 400
                  }
                ]
              },
              {
                "fontFamily": "SpaceMono-Regular",
                "fontDefinitions": [
                  {
                    "path": "./assets/fonts/SpaceMono-Regular.ttf",
                    "weight": 400
                  }
                ]
              }
            ]
          }
        }
      ],
      [
        "expo-build-properties",
        {
          "ios": {
            "useFrameworks": "static"
          }
        }
      ],
      [
        "@sentry/react-native/expo",
        {
          "url": "https://sentry.io/",
          "project": "dreamweaver",
          "organization": "samlovesit"
        }
      ]
    ],
    "experiments": {
      "typedRoutes": true
    },
    "extra": {
      "router": {},
      "eas": {
        "projectId": "1bd7d4bd-9179-4cab-acee-fe6fa69367d3"
      }
    }
  }
}
